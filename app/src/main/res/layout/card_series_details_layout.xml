<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8sp"
    android:paddingHorizontal="16sp">

    <ImageView
        android:id="@+id/series_season_images"
        android:layout_width="104dp"
        android:layout_height="160dp"
        android:background="@drawable/bg_border_round"
        android:contentDescription="@string/description"
        android:scaleType="fitXY"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_launcher_foreground" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/series_season_images"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/series_season_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8sp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/series_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/series_season_title"
            android:layout_marginBottom="8sp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

        <TextView
            android:id="@+id/season_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/series_date"
            android:maxLines="4"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@color/white" />
        
    </RelativeLayout>

</RelativeLayout>